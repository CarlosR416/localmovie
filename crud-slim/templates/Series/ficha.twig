{% for item in data %}

	<div class="col-lg-3 col-md-4 mb-3">
	    <div class="card play">
	      <div class="img-container">
          	<img class="card-img-top" src="{{base_url()}}/assets/imagenes/{{item.img}}" alt="">
          	<div class="icon-container">
          		<span class="material-icons myicon">play_circle_outline</span>
          	</div>
          </div>
	      <div class="card-body">
	        <h5 class="card-title font-weight-bold">
	          {{item.titulo}}
	        </h5>
	        <h6>{{item.temporadas}} Temporadas</h6>
	      </div>
	      <a href="{{path_for('series.ver',{'id_serie' : item.id})}}">
	      	 <div class="sombra" data-id="{{item.id}}" data-name="{{item.titulo}}">
               {% if Session  is not empty and Session.admin == 1%}
	                <button class="btn_p_delete btn btn-dark"><span class="material-icons">delete</span></button>
      				<button class="bnt_p_edit btn btn-dark"><span class="material-icons">edit</span></button>
      			{% endif %}
            </div>
		  </a>
	    </div>
	 </div>

{% endfor %}